{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with sanitizers",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "ON",
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo Build",
      "description": "Release build with debug info and thread sanitizer",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-relwithdebinfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_TSAN": "ON",
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "minsize",
      "displayName": "MinSizeRel Build",
      "description": "MinSize build optimized for size",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-minsizerel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "release_no_logger",
      "displayName": "Release Build (No Logger)",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release-no-logger",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FEATURE_DISABLE_LOGGER": "ON"
      }
    },
    {
      "name": "release_preload_assets",
      "displayName": "Release Build (Include and preload all Assets)",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release-preload-assets",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FEATURE_BONGOCAT_EMBEDDED_ASSETS": "ON",
        "FEATURE_MS_AGENT_EMBEDDED_ASSETS": "ON",
        "FEATURE_ENABLE_DM_EMBEDDED_ASSETS": "ON",
        "FEATURE_PRELOAD_ASSETS": "ON"
      }
    },
    {
      "name": "relwithdebinfo_preload_assets",
      "displayName": "RelWithDebInfo Build (Include and preload all Assets)",
      "description": "Release build with debug info and thread sanitizer",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-relwithdebinfo-preload-assets",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_TSAN": "ON",
        "ENABLE_UBSAN": "ON",
        "FEATURE_BONGOCAT_EMBEDDED_ASSETS": "ON",
        "FEATURE_MS_AGENT_EMBEDDED_ASSETS": "ON",
        "FEATURE_ENABLE_DM_EMBEDDED_ASSETS": "ON",
        "FEATURE_PRELOAD_ASSETS": "ON"
      }
    },
    {
      "name": "debug_only_bongocat",
      "displayName": "Debug Build (Only Bongocat)",
      "description": "Debug build with sanitizers enabled",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug-only-bongocat",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "ON",
        "ENABLE_UBSAN": "ON",
        "FEATURE_BONGOCAT_EMBEDDED_ASSETS": "ON",
        "FEATURE_MS_AGENT_EMBEDDED_ASSETS": "OFF",
        "FEATURE_ENABLE_DM_EMBEDDED_ASSETS": "OFF"
      }
    },
    {
      "name": "release_only_bongocat",
      "displayName": "Release Build (Only Bongocat)",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release-only-bongocat",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FEATURE_BONGOCAT_EMBEDDED_ASSETS": "ON",
        "FEATURE_MS_AGENT_EMBEDDED_ASSETS": "OFF",
        "FEATURE_ENABLE_DM_EMBEDDED_ASSETS": "OFF"
      }
    },
    {
      "name": "release_all_assets",
      "displayName": "Release Build with ALL assets (full dm versions)",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release-all-assets",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FEATURE_BONGOCAT_EMBEDDED_ASSETS": "ON",
        "FEATURE_MS_AGENT_EMBEDDED_ASSETS": "ON",
        "FEATURE_ENABLE_DM_EMBEDDED_ASSETS": "ON",
        "FEATURE_DM_EMBEDDED_ASSETS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
      "name": "minsize",
      "configurePreset": "minsize"
    }
  ]
}
